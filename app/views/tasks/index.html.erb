<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table tabel-striped">
    <thread>
      <tr>
        <th>id</th>
        <th>進捗</th>
        <th>タスク</th>
      </tr>
    </thread>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task %></td>
        <td>【進捗】<%= task.status %></td>
        <td>:【タスク】<%= task.content %></td>
      </tr>
      <% end %>
      </tbody>
  </table>
  <div>
    <%= paginate @tasks %>
  </div>
  <% end %>
  
<%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>
  


