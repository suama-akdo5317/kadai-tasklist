<h1>タスク<%= @task.id %></h1>
<p>進捗: <%= @task.status %></p>
<p>タスク: <%= @task.content %></p>



<%= link_to 'このタスクを編集', edit_task_path(@task), class: 'btn btn-light' %>
<%= link_to 'このタスクを削除', @task, method: :delete, data: {confirm: '本当に削除してよろしいですか？'}, class: 'btn btn-danger' %>
<p><%= link_to '一覧に戻る', tasks_path, class: 'btn btn-primary' %></p>