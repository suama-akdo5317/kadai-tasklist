<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(task.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to task.user.name, user_path(task.user) %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          <p>タスク：<%= task.content %></p>
          <p>進捗：<%= task.status %></p>
          <%= link_to '更新/削除', task_path(task.id), class: 'btn btn-sm btn-primary' %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>