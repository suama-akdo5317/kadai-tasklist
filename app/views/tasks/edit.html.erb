<h1>id: <%= @task.id %> のタスク編集ページ</h1>

<%= form_with(model: @task, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>

  <%= f.label :status, '進捗' %>
  <%= f.text_field :status %>

  <%= f.label :content, 'ワーク' %>
  <%= f.text_field :content %>

  <%= f.submit '更新' %>
<% end %>


<%= link_to '一覧に戻る', tasks_path %>



