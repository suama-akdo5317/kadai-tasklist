<h1>id: <%= @task.id %> のタスク編集ページ</h1>

<%= form_with(model: @task, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
<p>
  <%= f.label :status, 'Status:' %>
  <%= f.text_field :status %>
</p>
<p>
  <%= f.label :content, 'Task:' %>
  <%= f.text_field :content %>
</p>
  <%= f.submit '更新' %>
<% end %>


<%= link_to '一覧に戻る', tasks_path %>



